@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i>
            <span>@Html.Encode(User.Identity.Name) <i class="caret"></i></span>
        </a>
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header bg-light-blue">
                <img src="/Content/AdminLTE/img/avatar3.png" class="img-circle" alt="User Image" />
                <p>
                    Jane Doe - Web Developer
                    <small>Member since Nov. 2012</small>
                </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
                <div class="col-xs-4 text-center">
                    <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
                <div class="pull-left">
                    <a href='@Url.Action("Manage", "Account", new { area=""})' title="Profile" class="btn btn-default btn-flat">
                        <i class="fa fa-user"></i>
                        <label>Profile</label>
                    </a>

                    @*<a href="#" class="btn btn-default btn-flat">Profile</a>*@
                </div>
                <div class="pull-right">
                    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "user-menu" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">
                            <i class="fa fa-sign-out"></i>
                            <label>Sign Out</label>
                        </a>
                    }
                    @*<a href="#" class="btn btn-default btn-flat">Sign out</a>*@
                </div>
            </li>
        </ul>
    </li>
}
else
{
    @Html.ActionLink("Log in", "Login", "Account", null, new Dictionary<string, object> { { "id", "loginLink" }, { "class", "user-menu" }, { "data-toggle", "dropdown" } })

}