@model IEnumerable<HAKCMS.Model.ViewModel.UserViewModel>

@{
    ViewBag.Title = "User Management";
}


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    Users
                </h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">
                <div class="form-group">

                    <a href='@Url.Action("Create")' class="btn btn-primary" id="createNew">
                        <i class="fa fa-plus-square"></i>
                        Create New
                    </a>
                </div>
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                Operations
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                       @Html.Partial("_UserTableItems")

                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div>
</div>

@section scripts{
    <!-- DATA TABES SCRIPT -->
    <script src="/Content/AdminLTE/js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="/Content/AdminLTE/js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });
    </script>

    @Html.Partial("_DeleteResult")
    @Html.Partial("_Message")
}
